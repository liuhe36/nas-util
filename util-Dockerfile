#
# Dockerfile for youtube-dl
#

FROM alpine
MAINTAINER kev <noreply@easypi.pro1>

RUN set -xe \
    && apk add --no-cache ca-certificates \
                          ffmpeg \
                          openssl \
                          python3 \
			  python3-dev \
			  py3-pip \
			  bash \
			  bash-doc \
			  bash-completion \
    && pip3 install youtube-dl you-get && python3 -m pip install --upgrade yt-dlp

WORKDIR /data

CMD ["/bin/sh"]
